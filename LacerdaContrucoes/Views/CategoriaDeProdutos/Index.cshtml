@model IEnumerable<LacerdaContrucoes.Models.CategoriaDeProdutos>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-white text-center">Início:</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar novo</a>
</p>
<table class="table text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeDaCategoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeDaCategoria)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.CategoriaDeProdutosId">Editar</a> 
                <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.CategoriaDeProdutosId">Detalhes</a> 
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CategoriaDeProdutosId">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
