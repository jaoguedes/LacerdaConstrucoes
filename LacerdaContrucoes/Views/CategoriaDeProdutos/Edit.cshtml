@model LacerdaContrucoes.Models.CategoriaDeProdutos

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-white text-center">Editar</h1>

<h4 class="text-white text-center">Categoria De Produtos</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoriaDeProdutosId" />
            <div class="form-group">
                <label asp-for="NomeDaCategoria" class="control-label"></label>
                <input asp-for="NomeDaCategoria" class="form-control" />
                <span asp-validation-for="NomeDaCategoria" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 d-flex justify-content-center">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-3">Voltar para a lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
