@model LacerdaContrucoes.Models.CadVendas

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-white text-center">Detalhes</h1>

<div class="text-white text-center">
    <h4>Cadastro de Vendas</h4>
    <hr />
    <dl class="row justify-content-center">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NotaDaVenda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NotaDaVenda)
        </dd>
        <hr />
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataDaVenda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataDaVenda)
        </dd>
        <hr />
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.ClienteId)
        </dd>
        <hr />
    </dl>
</div>
<div class="d-flex justify-content-center">
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.CadVendasId">Editar</a>
    <a asp-action="Index" class="btn btn-secondary ms-3">Voltar para a lista</a>
</div>
