@model LacerdaContrucoes.Models.Produto

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-white text-center">Apagar</h1>

<div class="alert alert-danger text-center" role="alert">
   Você tem certeza de que quer apgar isto?
</div>

<div class="text-white text-center">
    <h4 class="text-white text-center">Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.qnt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.qnt)
        </dd>
        <hr />
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrecoUni)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecoUni)
        </dd>
        <hr />
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaDeProdutos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaDeProdutos.CategoriaDeProdutosId)
        </dd>
        <hr />
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fornecedor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fornecedor.FornecedorId)
        </dd>
        <hr />
    </dl>
    
    <form asp-action="Delete" class="d-flex justify-content-center">
        <input type="hidden" asp-for="ProdutoId" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-secondary ms-3">Voltar para a Lista</a>
    </form>
</div>
