@model IEnumerable<LacerdaContrucoes.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-white text-center">Produtos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar Novo</a>
</p>
<table class="table text-white text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProdutoName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.qnt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecoUni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaDeProdutos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProdutoName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.qnt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecoUni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriaDeProdutos.CategoriaDeProdutosId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fornecedor.FornecedorId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProdutoId" class="btn btn-primary">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.ProdutoId" class="btn btn-secondary">Detalhes</a> 
                <a asp-action="Delete" asp-route-id="@item.ProdutoId" class="btn btn-danger">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
