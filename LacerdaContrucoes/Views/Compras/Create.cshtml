@model LacerdaContrucoes.Models.Compra

@{
    ViewData["Title"] = "Create";
    var id = ViewData["idCompra"];
}

<h1>Criar</h1>

<h4>Compra</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CadComprasId" class="control-label"></label>
                <input asp-for="CadComprasId" class="form-control" value=@id readonly />
            </div>
            <div class="form-group">
                <label asp-for="qtdCompra" class="control-label"></label>
                <input asp-for="qtdCompra" class="form-control" />
                <span asp-validation-for="qtdCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoId" class="control-label"></label>
                <select asp-for="ProdutoId" class ="form-control" asp-items="ViewBag.ProdutoId"></select>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
