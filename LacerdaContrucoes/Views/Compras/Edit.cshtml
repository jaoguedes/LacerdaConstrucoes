@model LacerdaContrucoes.Models.Compra

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Compras</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CompraId" />
            <div class="form-group">
                <label asp-for="CadComprasId" class="control-label"></label>
                <select asp-for="CadComprasId" class="form-control" asp-items="ViewBag.CadComprasId"></select>
                <span asp-validation-for="CadComprasId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="qtdCompra" class="control-label"></label>
                <input asp-for="qtdCompra" class="form-control" />
                <span asp-validation-for="qtdCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoId" class="control-label"></label>
                <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.ProdutoId"></select>
                <span asp-validation-for="ProdutoId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
