@model LacerdaContrucoes.Models.Cliente


@{
    ViewData["Title"] = "Create";
}

<h1 class="text-white text-center">Criar</h1>

<h4 class="text-white text-center">Cliente</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4 mt-2">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClienteNome" class="control-label"></label>
                <input asp-for="ClienteNome" class="form-control" />
                <span asp-validation-for="ClienteNome" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="ClienteTelefone" class="control-label"></label>
                <input asp-for="ClienteTelefone" class="form-control" />
                <span asp-validation-for="ClienteTelefone" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="ClienteCpf" class="control-label"></label>
                <input asp-for="ClienteCpf" class="form-control" />
                <span asp-validation-for="ClienteCpf" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="ClienteEmail" class="control-label"></label>
                <input asp-for="ClienteEmail" class="form-control" />
                <span asp-validation-for="ClienteEmail" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="ClienteDataDeNascimento" class="control-label"></label>
                <input asp-for="ClienteDataDeNascimento" class="form-control" />
                <span asp-validation-for="ClienteDataDeNascimento" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <div class="d-flex justify-content-center">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-3">Voltar para a lista</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
