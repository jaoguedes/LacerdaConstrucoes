@model LacerdaContrucoes.Models.Cliente

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-white text-center">Apagar</h1>

<div class="alert alert-danger text-center" role="alert">
    Você tem certeza de que quer apagar isto?
</div>
<div>
    <h4 class="text-white text-center">Cliente</h4>
    <hr />
    <dl class="row text-white text-center">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClienteNome)
        </dt>
        <dd class="col-sm-10 mt-2">
            @Html.DisplayFor(model => model.ClienteNome)
        </dd>
        <hr />
        <dt class="col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.ClienteTelefone)
        </dt>
        <dd class="col-sm-10 mt-2">
            @Html.DisplayFor(model => model.ClienteTelefone)
        </dd>
        <hr />
        <dt class="col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.ClienteCpf)
        </dt>
        <dd class="col-sm-10 mt-2">
            @Html.DisplayFor(model => model.ClienteCpf)
        </dd>
        <hr />
        <dt class="col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.ClienteEmail)
        </dt>
        <dd class="col-sm-10 mt-2">
            @Html.DisplayFor(model => model.ClienteEmail)
        </dd>
        <hr />
        <dt class="col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.ClienteDataDeNascimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClienteDataDeNascimento)
        </dd>
        <hr />
    </dl>

    <div class="d-flex justify-content-center">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ClienteId" />
            <input type="submit" value="Apagar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary ms-3">Voltar a Lista</a>
        </form>
    </div>
</div>
