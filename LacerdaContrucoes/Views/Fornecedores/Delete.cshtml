@model LacerdaContrucoes.Models.Fornecedor

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-white text-center">Apagar</h1>

<div class="alert alert-danger text-center" role="alert">
    Você tem certeza de que quer apagar isso?
</div>

<div>
    <h4 class="text-white text-center">Fornecedor</h4>
    <hr />
    <dl class="row justify-content-center text-white text-center">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FornecedorNome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FornecedorNome)
        </dd>
        <hr />
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FornecedorCNPJ)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FornecedorCNPJ)
        </dd>
        <hr />
    </dl>

    <form asp-action="Delete" class="d-flex justify-content-center">
        <input type="hidden" asp-for="FornecedorId" />
        <input type="submit" value="Apagar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary ms-3">Voltar para a Lista</a>
    </form>
</div>
