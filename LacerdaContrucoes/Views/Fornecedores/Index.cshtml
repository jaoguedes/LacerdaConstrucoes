@model IEnumerable<LacerdaContrucoes.Models.Fornecedor>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-white text-center">Fornecedores:</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar Novo</a>
</p>
<table class="table text-white text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FornecedorNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FornecedorCNPJ)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FornecedorNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FornecedorCNPJ)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.FornecedorId" class="btn btn-primary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.FornecedorId" class="btn btn-secondary">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.FornecedorId" class="btn btn-danger">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
