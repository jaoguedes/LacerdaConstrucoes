@model LacerdaContrucoes.Models.Fornecedor

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-white text-center">Criar</h1>

<h4 class="text-white text-center">Fornecedor</h4>
<hr />
<div class="row justify-content-center text-white">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="FornecedorNome" class="control-label"></label>
                <input asp-for="FornecedorNome" class="form-control" />
                <span asp-validation-for="FornecedorNome" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="FornecedorCNPJ" class="control-label"></label>
                <input asp-for="FornecedorCNPJ" class="form-control" />
                <span asp-validation-for="FornecedorCNPJ" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <div class="d-flex justify-content-center">
                    <input type="submit" value="Criar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary ms-3">Voltar para a Lista</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
