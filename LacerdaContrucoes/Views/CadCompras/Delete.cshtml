@model LacerdaContrucoes.Models.CadCompras

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar</h1>

<div class="alert alert-danger" role="alert">
    Você tem certeza de que quer apagar isto?
</div>
<div>
    <h4>Cadastro de Compras</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NotaDaCompra)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NotaDaCompra)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataDaCompra)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataDaCompra)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fornecedor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fornecedor.FornecedorId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CadComprasId" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
    </form>
</div>
