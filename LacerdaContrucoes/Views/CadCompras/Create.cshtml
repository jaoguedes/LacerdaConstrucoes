@model LacerdaContrucoes.Models.CadCompras

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-white text-center">Criar</h1>

<h4 class="text-white text-center">Cadastro de Compras</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NotaDaCompra" class="control-label"></label>
                <input asp-for="NotaDaCompra" class="form-control" />
                <span asp-validation-for="NotaDaCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDaCompra" class="control-label"></label>
                <input asp-for="DataDaCompra" class="form-control" />
                <span asp-validation-for="DataDaCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FornecedorId" class="control-label"></label>
                <select asp-for="FornecedorId" class="form-control" asp-items="ViewBag.FornecedorId"></select>
            </div>
            <div class="form-group mt-3">
                <div class="d-flex justify-content-center">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary ms-3">Voltar para a lista</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
