@model LacerdaContrucoes.Models.Venda

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Vendas</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="VendaId" />
                <div class="form-group mt-3">
                    <label asp-for="CadVendasId" class="control-label"></label>
                    <select asp-for="CadVendasId" class="form-control" asp-items="ViewBag.CadVendasId"></select>
                    <span asp-validation-for="CadVendasId" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="qtdVendas" class="control-label"></label>
                    <input asp-for="qtdVendas" class="form-control" />
                    <span asp-validation-for="qtdVendas" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProdutoId" class="control-label"></label>
                    <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.ProdutoId"></select>
                    <span asp-validation-for="ProdutoId" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
